package com.regex;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class WriteSfileCopyToDfile {

	public static void main(String[] args) throws IOException {
		// TODO Auto-generated method stub

		File sfl = new File("D:\\EclipseWorkSpace\\wap1\\src\\com\\regex\\source.txt");

		FileWriter sfw = new FileWriter(sfl);
		BufferedWriter sbw = new BufferedWriter(sfw);

		sbw.write("1st Line -I am writing what i need to copy at destination file \n");
		sbw.write("2nd line \n");
		sbw.write("3rd line \n");
		sbw.write("4th line");
		
		sbw.flush();

		//sbw.close();

		FileReader sfr = new FileReader(sfl);
		BufferedReader sbr = new BufferedReader(sfr);

		FileWriter dfw = new FileWriter("D:\\EclipseWorkSpace\\wap1\\src\\com\\regex\\destination.txt");
		BufferedWriter dbw = new BufferedWriter(dfw);

		String s = "";

		while ((s = sbr.readLine()) != null)

		{

			System.out.println(s + "\n");
			dbw.write(s + "\n");

		}
		
		dbw.flush();
		//sbr.close();
		//dbw.close();

	}

}
